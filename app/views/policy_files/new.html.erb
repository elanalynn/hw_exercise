<main>
  <h1>Upload a Policy CSV</h1>
  <p>The CSV should contain the following columns:</p>
  <ul>
    <li>policy_type</li>
    <li>division</li>
    <li>carrier_id</li>
    <li>client_id</li>
    <li>effective_date</li>
    <li>expiration_date</li>
    <li>written_premium</li>
    <li>carrier_policy_number</li>
  </ul>

  <%= form_with model: @policy_file do |f| %>
    <div class="form-group">
      <%= f.file_field :data %>
    </div>
    <div class="form-group">
      <%= f.submit 'Submit', class: 'submit' %>
    </div>
  <% end %>
</main>
