<p id="notice"><%= notice %></p>

<h1>Policies</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Division</th>
      <th>Carrier</th>
      <th>Client</th>
      <th>Effective date</th>
      <th>Expiration date</th>
      <th>Written premium</th>
      <th>Carrier policy number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @policies.each do |policy| %>
      <tr>
        <td><%= policy.type %></td>
        <td><%= policy.division %></td>
        <td><%= policy.carrier_id %></td>
        <td><%= policy.client_id %></td>
        <td><%= policy.effective_date %></td>
        <td><%= policy.expiration_date %></td>
        <td><%= policy.written_premium %></td>
        <td><%= policy.carrier_policy_number %></td>
        <td><%= link_to 'Show', policy %></td>
        <td><%= link_to 'Edit', edit_policy_path(policy) %></td>
        <td><%= link_to 'Destroy', policy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

